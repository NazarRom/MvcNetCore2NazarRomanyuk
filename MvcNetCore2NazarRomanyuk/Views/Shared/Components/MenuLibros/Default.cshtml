@model List<Genero>

<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Dropdown button
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">

        @foreach (Genero gen in Model)
        {
            <li>
                <a asp-controller="Libros" asp-action="LibrosByGenero" asp-route-idgenero="@gen.IdGenero" class="dropdown-item">@gen.Nombre</a>
            </li>
        }
        
    </ul>
</div>

